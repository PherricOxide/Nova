extends layout

block content
  div(style="text-align:center")
    h2 Create New User Account
    p Note that this new account will replace the default username and password.
    form(method="post", action="/createInitialUser", autocomplete="off")
      table(align="center", border="0", style="background-color: #D0E9FC; padding:15px; border-collapse:collapse; border: 2px solid black;")
        tr
          td
            label Username
          td
            input(type="text", name="username", size="20")
        tr
          td
            label Password
          td
            input(type="password", name="password", size="20") 
        tr
          td
          td
      button(type="button", onClick="location.href='/welcome'") Back
      input(id="nextButton", type="submit", value="Continue to Basic Options")
